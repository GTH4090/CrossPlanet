<Page x:Class="CrossPlanetDesktop.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CrossPlanetDesktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="TourStats" Width="Auto" Content="Данные о маршруте"/>
            <Button x:Name="EngineBtn" Content="Контроль автоклава и реактора" Width="Auto"/>
            <Button x:Name="ResorsesBtn" Content="Контроль ресурсов" Width="Auto" Click="ResorsesBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
